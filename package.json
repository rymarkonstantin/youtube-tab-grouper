{
  "name": "youtube-tab-grouper",
  "version": "2.1.0",
  "description": "Chrome extension that groups YouTube tabs by category",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && node --loader ts-node/esm scripts/build.ts",
    "build:watch": "node --loader ts-node/esm scripts/build.ts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,ts}\" \"ui/**/*.{js,ts}\" \"scripts/**/*.{js,ts}\" --max-warnings=0",
    "format": "prettier --write \"src\" \"ui\" \"scripts\" \"manifest.json\" \"tsconfig.json\" \"eslint.config.cjs\" \"package.json\"",
    "format:check": "prettier --check \"src\" \"ui\" \"scripts\" \"manifest.json\" \"tsconfig.json\" \"eslint.config.cjs\" \"package.json\"",
    "prepare": "husky",
    "smoke": "node --loader ts-node/esm --experimental-specifier-resolution=node scripts/smoke/run-smoke.ts"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "esbuild": "^0.23.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^14.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
